<!-- Combines VectorDrawable with ObjectAnimators to create AnimatedVectorDrawable -->
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
                 android:drawable="@drawable/vectordrawable" >

    <!-- name - android:name of <target> or <group> in VectorDrawable's XML -->
    <!-- animation - link to ObjectAnimator .xml -->
    <target
        android:name="rotationGroup"
        android:animation="@anim/rotation" />

    <target
        android:name="v"
        android:animation="@anim/path_morph" />

</animated-vector>